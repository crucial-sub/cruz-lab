---
export const prerender = true;

// 시리즈 수정 페이지
import BaseLayout from '@/layouts/BaseLayout.astro';
---

<BaseLayout title="시리즈 수정 - Cruz Lab Admin">
  <div id="series-editor-root"></div>
</BaseLayout>

<script>
  import { createElement } from 'react';
  import { createRoot } from 'react-dom/client';
  import SeriesEditor from '@/components/admin/series/SeriesEditor';

  const container = document.getElementById('series-editor-root');
  if (container) {
    const params = new URLSearchParams(window.location.search);
    const id = params.get('id');
    
    const root = createRoot(container);
    root.render(createElement(SeriesEditor, { mode: 'edit', seriesId: id }));
  }
</script>
