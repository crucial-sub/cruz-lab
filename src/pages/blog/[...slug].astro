---
export const prerender = false; // SSR - 동적 라우팅

// 개별 블로그 포스트 페이지 - Firebase에서 동적으로 로드
import BlogPostView from '@/components/blog/BlogPostView';
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getPostMetaBySlug } from '@/lib/posts.server';

// URL에서 slug 추출
const { slug } = Astro.params;
const slugString = Array.isArray(slug) ? slug.join('/') : slug || '';

// 서버사이드에서 포스트 메타데이터 가져오기 (SEO용)
const postMeta = await getPostMetaBySlug(slugString);

// 메타데이터 설정
const title = postMeta?.title || '포스트를 찾을 수 없습니다';
const description = postMeta?.description || '요청하신 포스트가 존재하지 않습니다.';
const heroImage = postMeta?.heroImage || undefined;
const tags = postMeta?.tags || [];
const publishedTime = postMeta?.pubDate || undefined;
---

<BaseLayout
  title={title}
  description={description}
  image={heroImage}
  type="article"
  publishedTime={publishedTime}
  tags={tags}
>
  <BlogPostView client:load slug={slugString} />
</BaseLayout>

<style is:global>
  /* 마크다운 prose 스타일 */
  .prose {
    color: var(--text-primary);
  }

  .prose h1 {
    font-size: 2.25rem;
    font-weight: 700;
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: var(--text-primary);
  }

  .prose h2 {
    font-size: 1.75rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    color: var(--text-primary);
    border-bottom: 1px solid var(--border);
    padding-bottom: 0.5rem;
  }

  .prose h3 {
    font-size: 1.375rem;
    font-weight: 600;
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
  }

  .prose h4 {
    font-size: 1.125rem;
    font-weight: 600;
    margin-top: 1.25rem;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
  }

  .prose p {
    margin: 1rem 0;
    line-height: 1.8;
    color: var(--text-secondary);
  }

  .prose ul,
  .prose ol {
    padding-left: 1.5rem;
    margin: 1rem 0;
  }

  .prose li {
    margin: 0.5rem 0;
    color: var(--text-secondary);
  }

  .prose blockquote {
    border-left: 4px solid var(--brand);
    padding-left: 1rem;
    margin: 1.5rem 0;
    color: var(--text-secondary);
    font-style: italic;
    background: var(--bg-card);
    padding: 1rem;
    border-radius: 0 0.5rem 0.5rem 0;
  }

  .prose pre {
    background-color: #1e1e1e;
    color: #e5e7eb;
    border-radius: 0.5rem;
    padding: 1rem;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  .prose code {
    font-family: 'Fira Code', 'JetBrains Mono', Consolas, monospace;
    font-size: 0.875rem;
  }

  .prose pre code {
    background: transparent;
    padding: 0;
  }

  .prose img {
    max-width: 100%;
    border-radius: 0.5rem;
    margin: 1.5rem 0;
  }

  .prose a {
    color: var(--brand);
    text-decoration: underline;
  }

  .prose a:hover {
    color: var(--brand);
    opacity: 0.8;
  }

  .prose hr {
    border: none;
    border-top: 1px solid var(--border);
    margin: 2.5rem 0;
  }

  .prose strong {
    font-weight: 700;
    color: var(--text-primary);
  }

  .prose em {
    font-style: italic;
  }

  .prose table {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
  }

  .prose th,
  .prose td {
    border: 1px solid var(--border);
    padding: 0.75rem;
    text-align: left;
  }

  .prose th {
    background: var(--bg-card);
    font-weight: 600;
  }
</style>
