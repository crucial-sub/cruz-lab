---
export const prerender = true;

import ExperienceList from '@/components/ExperienceList.astro';
import ContactSection from '@/components/islands/ContactSection';
import CursorFollower from '@/components/islands/CursorFollower';
import FadeInSection from '@/components/islands/FadeInSection';
import InteractiveHero from '@/components/islands/InteractiveHero';
import PostsPreview from '@/components/islands/PostsPreview';
import ScrollProgress from '@/components/islands/ScrollProgress';
import SkillsSection from '@/components/islands/SkillsSection';
import ProjectsPreview from '@/components/ProjectsPreview.astro';
import me from '../assets/img/profile.svg';
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'Home';
const description = 'Cruz — Frontend Developer Portfolio & Blog';

// Hero에서 사용할 역할 텍스트
const roles = [
  'Software Engineer',
  'Performance Obsessed',
  'UX-Driven Developer',
  'Deep Diver',
  'Real-time Data Handler'
];

// 핵심 메시지 강조
const tagline = `"사용자와 가장 가까운 곳에서,
데이터의 가치를 실시간으로 전달하는 개발자."`;

const heroDescription = `사용자 경험(UX)은 눈에 보이는 디자인에서 시작해, ‘데이터가 전달되는 속도와 방식'으로 완성된다고 믿습니다. WebSocket과 SSE를 활용한 실시간 기능 구현 경험을 통해, 기술적 최적화가 어떻게 UX를 혁신하는지 체감했습니다.
크래프톤 정글에서 CS 기초부터 깊이 있게 학습하며, 문제를 끝까지 파고들어 해결하는 집요한 개발 습관을 길렀습니다.`;
---

<BaseLayout title={title} description={description}>
  <!-- 커스텀 커서 (데스크톱만) -->
  <CursorFollower client:load />

  <!-- 스크롤 프로그레스 바 -->
  <ScrollProgress client:load />

  <!-- Hero 섹션 -->
  <InteractiveHero
    client:load
    name="Cruz"
    roles={roles}
    tagline={tagline}
    description={heroDescription}
    photoSrc={me.src}
  />

  <!-- Experience 섹션 -->
  <FadeInSection client:visible delay={0.2}>
    <ExperienceList />
  </FadeInSection>

  <!-- Featured Projects 섹션 -->
  <FadeInSection client:visible delay={0.1}>
    <ProjectsPreview />
  </FadeInSection>

  <!-- Skills 섹션 -->
  <FadeInSection client:visible delay={0.1}>
    <SkillsSection client:visible />
  </FadeInSection>

  <!-- Latest Posts 섹션 -->
  <FadeInSection client:visible delay={0.1}>
    <PostsPreview client:visible />
  </FadeInSection>

  <!-- Contact 섹션 -->
  <FadeInSection client:visible delay={0.1}>
    <ContactSection client:visible />
  </FadeInSection>
</BaseLayout>
