---
// BaseLayout: 전체 페이지 레이아웃
// Open Graph 메타태그를 위한 추가 props 지원
import { ViewTransitions } from 'astro:transitions';
import '../styles/global.css';
import BaseHead from './components/BaseHead.astro';
import Footer from './components/Footer.astro';
import Header from './components/Header.astro';
import NetworkStatus from '@/components/islands/NetworkStatus';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  publishedTime?: string;
  tags?: string[];
}

const { title, description, image, type, publishedTime, tags } = Astro.props;
---

<!doctype html>
<html lang="ko">
  <BaseHead {title} {description} {image} {type} {publishedTime} {tags} />
  <ViewTransitions />
  <body class="bg-bg-app text-text-primary antialiased">
    <!-- 건너뛰기 링크 (접근성) -->
    <a href="#main-content" class="skip-link">본문으로 건너뛰기</a>

    <Header />

    <!-- 본문: 최소 높이로 푸터 밀어내기 -->
    <main id="main-content" tabindex="-1" class="min-h-[calc(100vh-160px)] py-8">
      <div class="container">
        <slot />
      </div>
    </main>

    <Footer />

    <!-- 네트워크 상태 UI (PWA) -->
    <NetworkStatus client:load />
  </body>
</html>
